{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop":true,
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/mqtt/**/**",
      "./src/ros2/**/**"
    ],
    "out": "./docs",
    "name":"Documents of ROS2-MQTT Client",
    "excludePrivate": false,
    "readme": "README.md",
    "gitRevision": "Dev_Reidlo_230327"
  },
  "exclude": [
      "**/dist/**",
      "**/test/**",
      "**/node_modules/**"
    ]
}